<h2>Add a Tattoo</h2>

<div class="container" id="homepage">
  <div class="row" style="margin-top: 15px">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <% if @tattoo.errors.any? %>
        <ul>
          <%@tattoo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= simple_form_for @tattoo do |f| %>
        <%= f.input :name, label: "Enter the name of your tattoo", input_html: { placeholder: "Black Flag..." } %>
        <%= f.input :description, label: "Please give a detailed description of your tattoo" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
